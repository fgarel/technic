#!/bin/sh


# bati_article_00
cp ../data1/foot/bati_article_00.txt \
   ../data1/foot/bati_article_00.sav

./01_07_bati.awk \
   -v NBCHAMP=25 \
   ../data1/foot/bati_article_00.sav \
   > ../data1/foot/bati_article_00.txt 

